<% @users.each do |user| %>
  <tr>
    <td><%= user.time %></td>
    <td><%= user.category %></td>
    <td><%= user.subject %></td>
    <td><%= user.content %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_article_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

